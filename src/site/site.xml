      <item name="Latest Release (Binaries)" href="http://hlt-services4.fbk.eu:8080/artifactory/repo/eu/excitementproject/EOP-release/0.8.4/EOP-release-0.8.4-bin.zip" />
      <item name="EOP Resources" href="http://hlt-services4.fbk.eu:8080/artifactory/repo/eop-resources/eop-resources.tar/0.8.4/eop-resources.tar-0.8.4.gz" />
