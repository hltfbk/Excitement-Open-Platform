<?xml version="1.0" encoding="UTF-8"?>
<project name="EXCITEMENT Open Platform (EOP)"
  xmlns="http://maven.apache.org/DECORATION/1.3.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

  <bannerLeft>
    <name><![CDATA[
<span class="color-highlight">EXCITEMENT</span> Open Platform (EOP)
]]> </name>
    <href>http://hltfbk.github.com/Excitement-Open-Platform/</href>
  </bannerLeft>  
  <publishDate position="bottom" format="yyyy-MM-dd" />
  <version position="bottom" />

  <skin>
    <groupId>lt.velykis.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>1.0.0</version>
  </skin>
  <custom>
    <reflowSkin>
      <!-- Make this to 'false' for local development, i.e. file:// URLs -->
      <protocolRelativeURLs>false</protocolRelativeURLs>
      <smoothScroll>true</smoothScroll>
      <theme>default</theme>
	<skinAttribution>false</skinAttribution>
      <highlightJs>true</highlightJs>
      <highlightJsTheme>github</highlightJsTheme>
      <absoluteResourceURL>http://hltfbk.github.com/Excitement-Open-Platform/</absoluteResourceURL>
      <brand>
        <!-- Brand text in top-left part of the site -->
        <name>
          <![CDATA[
<span class="color-highlight">EXCITEMENT:</span> EXploring Customer Interactions through Textual EntailMENT
]]>     </name>
        <href>http://www.excitement-project.eu/</href>
      </brand>
      <slogan>Open Source Platform for Recognizing Textual Entailments (RTE)</slogan>
      <titleTemplate>%2$s | %1$s</titleTemplate>
      <!-- Use Table of Contents at the top of the page (max 6 elements) -->
      <toc>top</toc>
      <tocTopMax>4</tocTopMax>
      <!-- Include the documentation and tools in the top navigation (in addition to links) -->
      <topNav>Know it|Learn it|Try it|Contribute</topNav>

      <!-- Split menus in the bottom navigation -->
      <bottomNav maxSpan="9" >
        <column>Know it</column>
        <column>Learn it</column>
        <column>Try it</column>
        <column>Contribute</column>
      </bottomNav>
      <bottomDescription>
        <![CDATA[
<span class="color-highlight">The EXCITEMENT Open Platform (EOP)</span> is a leading open source platform 
for Recognizing Textual Entailment (RTE), which is developed in the course of the European Union (EU)
research project EXCITEMENT (EXploring Customer Interactions through Textual EntailMENT) since 2012.
]]>
      </bottomDescription>
 
    </reflowSkin>
  </custom>

  <body>

    <links>
	<item name="Contact" href="contact.html" />
    </links>

    <breadcrumbs>
      <item name="EOP" href="/" />
    </breadcrumbs>

    <menu name="Know it" ref="reports" inherit="bottom" />

    <menu name="Learn it" inherit="bottom">
